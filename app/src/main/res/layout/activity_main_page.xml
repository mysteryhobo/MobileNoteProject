<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainPage"
    style="@style/Layout"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_newNote_mainPage"
        android:onClick="createNewTextNote"/>

    <TextView
        android:id="@+id/textView_mainPage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="temp Text box to test Create new text note class"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_testNoteImage_mainPage" />

</LinearLayout>
